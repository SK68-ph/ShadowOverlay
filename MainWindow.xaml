<Window x:Class="ShadowOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowOverlay"
        mc:Ignorable="d"
        IsHitTestVisible="False" AllowsTransparency="True" WindowStartupLocation="Manual" Height="45" Width="255" Topmost="True" WindowStyle="None" Closing="Window_Closing">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="232*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Viewbox StretchDirection="DownOnly" Stretch="Uniform" Grid.ColumnSpan="2">
            <TextBlock x:Name="txtVBE" Text="Waiting" IsHitTestVisible="True" HorizontalAlignment="Center" FontSize="99" Foreground="Gray"/>
        </Viewbox>
    </Grid>
</Window>
